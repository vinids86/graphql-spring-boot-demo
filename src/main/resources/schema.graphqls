schema {
  query: Query
  mutation: Mutation
}

type Query {
  findPetById(id: ID!): Pet
}

type Mutation {
  createPet(pet: PetInput!): Pet
  updatePet(id: ID!, pet: PetInput!): Pet
  deletePet(id: ID!): Pet
}

type Pet {
  id: ID!
  category: String!
  name: String!
  photoUrls: [String]!
  tags: [String]!
  status: Status!
}

input PetInput {
  category: String!
  name: String!
  photoUrls: [String]!
  tags: [String]!
  status: Status!
}

enum Status {
  AVAILABLE
  PENDING
  SOLD
}